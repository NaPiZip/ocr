    "version": "0.2.0",
    "configurations": [
        {
            "name": "pytest-unit",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "args": [
                "tests/unit",
                "-sv"
            ],
            "cwd": "${workspaceRoot}",
            "console": "integratedTerminal"
        },
        {
            "name": "pytest-local",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "args": [
                "tests/local_host",
                "-sv"
            ],
            "cwd": "${workspaceRoot}",
            "console": "integratedTerminal"
        },
        {
            "name": "python",
            "type": "python",
            "request": "launch",
            "program": "python ${file}",
            "console": "integratedTerminal"
        }
    ]
}